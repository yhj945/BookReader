<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rlbg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp">
        <RelativeLayout
            android:id="@+id/rl_my_info"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:clickable="true"
            android:background="@drawable/relativelayout_bgcolor">
            <ImageView
                android:id="@+id/iv_userImg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/me"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/iv_userImg"
                android:layout_alignTop="@+id/iv_userImg"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="昵称"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_userId"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tv_userName"
                android:layout_toRightOf="@id/iv_userImg"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:textSize="16sp"
                android:text="ID"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_my_phone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/rl_my_info"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:background="@drawable/relativelayout_bgcolor">
            <ImageView
                android:id="@+id/iv_my_phone_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/phone"/>
            <TextView
                android:id="@+id/tv_my_phone"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/iv_my_phone_img"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="手机"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_my_phone_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                style="@style/textview16sp"
                android:layout_toRightOf="@id/tv_my_phone"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_my_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#FFFFFF"
            android:layout_below="@+id/rl_my_phone"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:id="@+id/rl_my_settings_modify"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:background="@drawable/relativelayout_bgcolor">
                <ImageView
                    android:id="@+id/iv_my_modify_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/setting"/>
                <TextView
                    android:id="@+id/tv_my_modify"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/iv_my_modify_img"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="设置"
                    android:textSize="18sp"/>
            </RelativeLayout>
            <View
                android:layout_below="@id/rl_my_settings_modify"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#cbc9c9"
                android:id="@+id/view" />
            <RelativeLayout
                android:id="@+id/rl_my_settings_user"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:background="@drawable/relativelayout_bgcolor"
                android:layout_below="@+id/view"
                android:layout_alignParentStart="true">
                <ImageView
                    android:id="@+id/iv_my_user_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/user"/>
                <TextView
                    android:id="@+id/tv_my_user"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_toRightOf="@id/iv_my_user_img"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:text="切换用户"
                    android:textSize="18sp"/>
            </RelativeLayout>
            <View
                android:layout_below="@id/rl_my_settings_user"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#cbc9c9"
                android:id="@+id/view2" />
            <RelativeLayout
                android:id="@+id/rl_my_settings_exit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:background="@drawable/relativelayout_bgcolor"
                android:layout_below="@+id/view2"
                android:layout_alignParentStart="true">
                <ImageView
                    android:id="@+id/iv_my_exit_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/exit"/>
                <TextView
                    android:id="@+id/tv_my_exit"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/iv_my_exit_img"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="退出"
                    android:textSize="18sp"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
